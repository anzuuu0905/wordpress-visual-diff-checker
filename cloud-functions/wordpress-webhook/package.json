{
  "name": "wordpress-webhook-function",
  "version": "1.0.0",
  "description": "WordPress webhook receiver for VRT automation",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=wordpressWebhook",
    "deploy": "gcloud functions deploy wordpressWebhook --runtime nodejs20 --trigger-http --allow-unauthenticated",
