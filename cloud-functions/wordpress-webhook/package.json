    "lint": "eslint ."
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.2.0",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/tasks": "^4.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}